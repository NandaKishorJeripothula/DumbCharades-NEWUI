<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createTeams"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/home_plain"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teabreaktechnology.dumcharades.CreateTeamsActivity">


    <TextView
        android:id="@+id/team1NameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:fontFamily="serif"
        android:text="Team 1 name"
        android:textStyle="italic" />
    />

    <EditText
        android:id="@+id/team1Player1editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/team1NameTextView"
        android:fontFamily="serif"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/team1Player2editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/team1Player1editText"
        android:fontFamily="serif"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/team2NameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/team1Player2editText"
        android:fontFamily="serif"
        android:text="Team 2 name"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/team2Player1editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/team2NameTextView"
        android:layout_centerVertical="true"
        android:fontFamily="serif"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/team2Player2editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/team2Player1editText"
        android:layout_centerVertical="true"
        android:fontFamily="serif"
        android:textStyle="italic" />

    <Button
        android:id="@+id/startGameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team2Player2editText"
        android:layout_centerHorizontal="true"
        android:background="@drawable/colors"
        android:fontFamily="serif"
        android:text="startGame"
        android:textStyle="italic" />

</RelativeLayout>
