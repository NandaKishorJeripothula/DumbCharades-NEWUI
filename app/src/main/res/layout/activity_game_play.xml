<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fontFamily="serif"
    android:padding="16dp"
    android:textStyle="italic"
    tools:context="com.teabreaktechnology.dumcharades.GamePlayActivity">

    <TextView
        android:id="@+id/roundNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nextPlayerText"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/correctButton"
        android:layout_toStartOf="@+id/correctButton"
        android:fontFamily="serif"
        android:text="roundNumber"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/teamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/roundNumber"
        android:layout_toRightOf="@+id/roundNumber"
        android:fontFamily="serif"

        android:text=": teamName"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/nextPlayerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teamName"
        android:layout_marginTop="25dp"

        android:fontFamily="serif"
        android:text="Next player "
        android:textAlignment="center"
        android:textSize="14dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/playerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/teamName"

        android:layout_alignStart="@+id/teamName"
        android:layout_alignTop="@+id/nextPlayerText"
        android:layout_toEndOf="@id/nextPlayerText"
        android:layout_toRightOf="@id/nextPlayerText"
        android:fontFamily="serif"
        android:text="playerName"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/movieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/timer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/timer"
        android:layout_below="@+id/nextPlayerText"
        android:layout_marginTop="40dp"
        android:fontFamily="serif"
        android:text="movieName"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/movieName"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:text="Timer"
        android:textStyle="italic" />


    <Button
        android:id="@+id/nextPlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer"
        android:background="@drawable/next"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="16dp"/>


    <Button
        android:id="@+id/correctButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer"
        android:layout_toEndOf="@+id/nextPlayButton"
        android:layout_toRightOf="@+id/nextPlayButton"
        android:background="@drawable/correct"
        android:fontFamily="serif"
        android:layout_marginRight="20dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer"
        android:layout_toEndOf="@+id/nextPlayButton"
        android:layout_toRightOf="@+id/correctButton"
        android:background="@drawable/pause"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer"
        android:layout_toEndOf="@+id/pauseButton"
        android:layout_toRightOf="@+id/pauseButton"
        android:background="@drawable/play"
        android:fontFamily="serif"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/scoreBoardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/nextPlayButton"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:text="ScoreBoard"
        android:textStyle="italic" />


</RelativeLayout>
